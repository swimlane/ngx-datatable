{
  "name": "angular2-data-table",
  "version": "0.10.1",
  "description": "angular2-data-table is a Angular2 component for presenting large and complex data.",
  "main": "release/index.umd.js",
  "jsnext:main": "release/index.es.js",
  "typings": "release/index.d.ts",
  "scripts": {
    "check": "npm-check --skip-unused",
    "test": "npm run lint",
    "lint": "tslint ./src/**/*.ts",
    "version": "npm run release",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:release": "rimraf release",
    "build": "webpack --display-error-details",
    "build:release": "NODE_ENV=production npm run build",
    "build:ts": "tsc",
    "build:sass": "node-sass -o dist/ src/",
    "build:css": "postcss --use autoprefixer dist/*.css -d dist/",
    "watch": "webpack --display-error-details --watch",
    "start": "webpack-dev-server",
    "start:hmr": "webpack-dev-server --env.HMR",
    "release": "npm-run-all -s clean:* release:css release:ts -p release:replace release:build:* -s release:minify",
    "release:ts": "tsc --outDir release",
    "release:replace": "node tasks/replace.js",
    "release:build:umd": "rollup -c -f umd -o release/index.umd.js",
    "release:build:cjs": "rollup -c -f cjs -o release/index.cjs.js",
    "release:build:es": "rollup -c -f es -o release/index.es.js",
    "release:css": "node-sass -o release/ src/themes && node-sass -o release/ src/components",
    "release:minify": "uglifyjs release/index.js --source-map release/index.min.js.map --source-map-url release/index.js.map --compress --mangle --screw-ie8 --output release/index.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swimlane/angular2-data-table.git"
  },
  "keywords": [
    "angularjs",
    "angular",
    "javascript",
    "angular2",
    "datatable",
    "table"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swimlane/angular2-data-table/issues"
  },
  "homepage": "https://github.com/swimlane/angular2-data-table#readme",
  "peerDependencies": {
    "@angular/common": "^2.1.0",
    "@angular/compiler": "^2.1.0",
    "@angular/core": "^2.1.0",
    "@angular/platform-browser": "^2.1.0",
    "@angular/platform-browser-dynamic": "^2.1.0",
    "core-js": "^2.4.0"
  },
  "devDependencies": {
    "@angular/common": "~2.1.0",
    "@angular/compiler": "~2.1.0",
    "@angular/core": "~2.1.0",
    "@angular/platform-browser": "~2.1.0",
    "@angular/platform-browser-dynamic": "~2.1.0",
    "@angularclass/hmr": "^1.2.1",
    "@angularclass/hmr-loader": "^3.0.2",
    "@angular/compiler-cli": "^0.6.4",
    "@angular/platform-server": "~2.1.0",
    "@types/core-js": "^0.9.28",
    "@types/node": "^6.0.31",
    "autoprefixer": "^6.4.0",
    "awesome-typescript-loader": "2.2.4",
    "chalk": "^1.1.3",
    "clean-webpack-plugin": "^0.1.10",
    "core-js": "^2.4.0",
    "css-loader": "^0.24.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "html-webpack-plugin": "^2.22.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.0",
    "postcss": "^5.1.1",
    "postcss-loader": "^0.9.1",
    "progress-bar-webpack-plugin": "^1.9.0",
    "replace": "^0.3.0",
    "rimraf": "^2.5.2",
    "rollup": "^0.34.13",
    "rollup-plugin-sourcemaps": "^0.3.5",
    "rollup-plugin-typescript": "^0.8.0",
    "rxjs": "5.0.0-beta.12",
    "sass-loader": "^4.0.1",
    "source-map-loader": "^0.1.5",
    "style-loader": "0.13.1",
    "ts-helpers": "1.1.1",
    "tslint": "3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "2.0.2",
    "webpack": "2.1.0-beta.22",
    "webpack-dev-server": "2.1.0-beta.3",
    "webpack-notifier": "^1.4.0",
    "zone.js": "~0.6.25"
  }
}
